  <joint type="continuous" name="rear_left_wheel">
    <origin xyz="-0.2 0.2 -0.08" rpy="0 0 0"/>
    <child link="left_wheel_rear"/>
    <parent link="body"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
