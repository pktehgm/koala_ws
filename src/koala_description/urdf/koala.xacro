  <joint type="continuous" name="front_left_wheel">
    <origin xyz="0.2 0.2 -0.08" rpy="0 0 0"/>
    <child link="left_wheel_front"/>
    <parent link="body"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
